<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Podcasts - GT Sounds</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
                <i class="fas fa-music"></i>
                <span>GT Sounds</span>
            </a>
            <div class="nav-menu">
                <a href="/" class="nav-link">
                    <i class="fas fa-home"></i>
                    Home
                </a>
                <a href="/podcasts" class="nav-link active">
                    <i class="fas fa-podcast"></i>
                    Podcasts
                </a>
                <a href="/presentations" class="nav-link">
                    <i class="fas fa-cloud"></i>
                    Presentations
                </a>
                <a href="/documents" class="nav-link">
                    <i class="fas fa-graduation-cap"></i>
                    Documents
                </a>
                <a href="/admin-login" class="nav-link admin-btn">
                    <i class="fas fa-cog"></i>
                    Admin Login
                </a>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <div class="header-content">
                <div class="header-text">
                    <h1><i class="fas fa-music"></i> Podcasts</h1>
                    <p>Experience next-gen streaming with Dolby Atmos, lossless audio, and multi-channel formats</p>
                </div>
                <div class="header-actions">
                    <button class="header-btn">
                        <i class="fas fa-play"></i>
                        Play All
                    </button>
                    <button class="header-btn secondary">
                        <i class="fas fa-random"></i>
                        Shuffle
                    </button>
                    <button class="header-btn secondary">
                        <i class="fas fa-bell"></i>
                        Subscribe
                    </button>
                </div>
            </div>
        </div>
    </section>



    <!-- Featured Podcast -->
    <section class="featured-content">
        <div class="container">
            <h2>Featured Podcast</h2>
            <div id="featuredPodcast">
                <!-- Featured podcast will be loaded here -->
            </div>
        </div>
    </section>

    <!-- Podcasts Grid -->
    <section class="content-section">
        <div class="container">
            <!-- Search and Filters -->
            <div class="search-filters-inline">
                <div class="search-box">
                    <input type="text" id="searchInput" placeholder="Search podcasts...">
                    <button id="searchBtn"><i class="fas fa-search"></i></button>
                </div>
                <div class="filters">
                    <select id="sortFilter">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="popular">Most Popular</option>
                        <option value="duration">By Duration</option>
                        <option value="title">By Title (A-Z)</option>
                        <option value="title-desc">By Title (Z-A)</option>
                    </select>
                    <select id="categoryFilter">
                        <option value="">All Categories</option>
                    </select>
                </div>
            </div>
            
            <div class="section-header">
                <h2 class="section-title">All Music & Audio</h2>
            </div>
            <div class="content-grid" id="podcastsGrid">
                <!-- Podcasts will be loaded here -->
            </div>
            <div class="load-more">
                <button id="loadMoreBtn" class="btn btn-secondary">
                    <i class="fas fa-plus"></i>
                    Load More
                </button>
            </div>
        </div>
    </section>

    <!-- Spotify-like Bottom Music Player -->
    <div id="bottomMusicPlayer" class="bottom-music-player">
        <div class="player-left">
            <div class="track-image">
                <img id="playerTrackImage" src="" alt="Track" style="display: none;">
                <div id="playerTrackPlaceholder" class="track-placeholder">
                    <i class="fas fa-music"></i>
                </div>
            </div>
            <div class="track-info">
                <div class="track-name" id="playerTrackName">Select a podcast</div>
                <div class="track-artist" id="playerTrackArtist">StreamHub</div>
            </div>
            <button class="like-btn" id="playerLikeBtn">
                <i class="far fa-heart"></i>
            </button>
        </div>
        
        <div class="player-center">
            <div class="player-controls">
                <button class="control-btn" id="playerShuffleBtn">
                    <i class="fas fa-random"></i>
                </button>
                <button class="control-btn" id="playerPrevBtn">
                    <i class="fas fa-step-backward"></i>
                </button>
                <button class="control-btn play-pause-btn" id="playerPlayBtn">
                    <i class="fas fa-play"></i>
                </button>
                <button class="control-btn" id="playerNextBtn">
                    <i class="fas fa-step-forward"></i>
                </button>
                <button class="control-btn" id="playerRepeatBtn">
                    <i class="fas fa-redo"></i>
                </button>
            </div>
            <div class="progress-section">
                <span class="time-current" id="playerCurrentTime">0:00</span>
                <div class="progress-bar-container">
                    <div class="progress-bar" id="playerProgressBar">
                        <div class="progress-fill" id="playerProgressFill"></div>
                        <div class="progress-handle" id="playerProgressHandle"></div>
                    </div>
                </div>
                <span class="time-total" id="playerTotalTime">0:00</span>
            </div>
        </div>
        
        <div class="player-right">
            <button class="control-btn" id="playerQueueBtn">
                <i class="fas fa-list"></i>
            </button>
            <button class="control-btn" id="playerDevicesBtn">
                <i class="fas fa-desktop"></i>
            </button>
            <div class="volume-section">
                <button class="control-btn" id="playerVolumeBtn">
                    <i class="fas fa-volume-up"></i>
                </button>
                <div class="volume-bar-container">
                    <div class="volume-bar">
                        <div class="volume-fill" id="playerVolumeFill"></div>
                        <div class="volume-handle" id="playerVolumeHandle"></div>
                    </div>
                </div>
            </div>
            <button class="control-btn" id="playerFullscreenBtn">
                <i class="fas fa-expand"></i>
            </button>
        </div>
        
        <audio id="globalAudioPlayer" preload="metadata"></audio>
    </div>



    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 StreamHub. All rights reserved. | Free streaming platform for everyone</p>
        </div>
    </footer>

    <!-- Media Modal -->
    <div id="mediaModal" class="media-modal">
        <div class="media-modal-content">
            <div class="media-modal-header">
                <h3 id="mediaTitle" class="media-modal-title">Media Title</h3>
                <button class="media-modal-close">&times;</button>
            </div>
            <div class="media-modal-body">
                <div id="mediaContainer" class="media-container">
                    <!-- Media content will be inserted here -->
                </div>
                <div id="mediaDescription" class="media-description">
                    Media description will appear here...
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Audio Controls -->
    <div id="mobileAudioControls" class="mobile-audio-controls">
        <div class="mobile-audio-info">
            <div class="mobile-audio-thumbnail">
                <i class="fas fa-music"></i>
            </div>
            <div class="mobile-audio-details">
                <div id="mobileAudioTitle" class="mobile-audio-title">Track Title</div>
                <div id="mobileAudioArtist" class="mobile-audio-artist">GT Sounds Podcast</div>
            </div>
        </div>
        <div class="mobile-audio-controls-row">
            <button id="mobilePrevBtn" class="mobile-control-btn">
                <i class="fas fa-step-backward"></i>
            </button>
            <button id="mobilePlayBtn" class="mobile-play-btn">
                <i class="fas fa-play"></i>
            </button>
            <button id="mobileNextBtn" class="mobile-control-btn">
                <i class="fas fa-step-forward"></i>
            </button>
            <div class="mobile-progress-container">
                <span id="mobileCurrentTime" class="mobile-time">0:00</span>
                <div id="mobileProgressBar" class="mobile-progress-bar">
                    <div id="mobileProgressFill" class="mobile-progress-fill"></div>
                </div>
                <span id="mobileDuration" class="mobile-time">0:00</span>
            </div>
            <div class="mobile-control-buttons">
                <button id="mobileVolumeBtn" class="mobile-volume-btn">
                    <i class="fas fa-volume-up"></i>
                </button>
                <button id="mobileMenuBtn" class="mobile-control-btn">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
            </div>
        </div>
    </div>

    <script src="/js/podcasts.js"></script>
</body>
</html>