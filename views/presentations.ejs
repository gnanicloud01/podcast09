    <!-- Aurora Codec Section -->
    <section class="aurora-presentations-section">
        <div class="container">
            <div class="aurora-presentations-content">
                <div class="aurora-presentations-header">
                    <h2><i class="fas fa-code"></i> Aurora Codec</h2>
                    <p class="aurora-presentations-subtitle">GT Sounds' Proprietary Audio Engine</p>
                </div>
                <div class="aurora-presentations-description">
                    <p class="aurora-presentations-main">The Aurora Codec is GT Sounds' proprietary audio engine. It offers AI-driven compression that keeps full fidelity with smaller file sizes ‚Äî perfect for Dolby Atmos and spatial sound experiences.</p>
                    <blockquote class="aurora-presentations-quote">
                        "Uncompressed sound, intelligently optimized."
                    </blockquote>
                </div>
            </div>
        </div>
    </section>

    <!-- GT Sounds for India Section -->
    <section class="india-presentations-section">
        <div class="container">
            <div class="india-presentations-content">
                <div class="india-presentations-flag">
                    <i class="fas fa-flag"></i>
                </div>
                <h2>GT Sounds for India</h2>
                <h3 class="india-presentations-tagline">Built in India, for the world.</h3>
                <p class="india-presentations-description">GT Sounds represents India's rise in creative technology, education, and entrepreneurship ‚Äî making the nation a leader in sound innovation.</p>
            </div>
        </div>
    </section>

