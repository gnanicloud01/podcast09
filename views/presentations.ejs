    </nav>

    <!-- Hero Section -->
    <section class="presentations-hero">
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <h1><i class="fas fa-cloud"></i> GT Cloud Presentations</h1>
                    <p>Secure, scalable cloud platform for music storage, mixing, and collaboration. Experience the future of audio cloud technology.</p>
                    <div class="hero-tags">
                        <span class="tag">‚òÅÔ∏è Cloud Storage</span>
                        <span class="tag">üéµ Audio Mixing</span>
                        <span class="tag">ü§ù Collaboration</span>
                        <span class="tag">üîí Secure</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Category Filter -->
    <section class="category-filter-section">
        <div class="container">
            <div class="category-filters">
                <button class="category-btn active" data-category="all">
                    <i class="fas fa-th"></i> All Categories
                </button>
                <button class="category-btn" data-category="video">
                    <i class="fas fa-video"></i> Video Presentations
                </button>
                <button class="category-btn" data-category="slide">
                    <i class="fas fa-presentation"></i> Slide Presentations
                </button>
                <button class="category-btn" data-category="interactive">
                    <i class="fas fa-mouse-pointer"></i> Interactive
                </button>
            </div>
        </div>
    </section>

    <!-- Presentations Grid -->
    <section class="presentations-section">
        <div class="container">
            <div class="section-header">
                <h2>Featured Presentations</h2>
                <p>Explore our comprehensive collection of GT Cloud presentations and demos</p>
            </div>
            
            <div id="presentationsGrid" class="presentations-grid">
                <!-- Presentations will be loaded dynamically -->
            </div>
            
            <!-- Static fallback presentations -->
            <div id="staticPresentations" class="presentations-grid">
                <div class="presentation-card" data-type="slide">
                    <div class="presentation-thumbnail">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <div class="video-badge">
                            <i class="fas fa-presentation"></i> Slides
                        </div>
                    </div>
                    <div class="presentation-content">
                        <h3>GT Cloud Architecture Overview</h3>
                        <p>Complete overview of GT Cloud's scalable infrastructure and audio processing capabilities.</p>
                        <div class="presentation-meta">
                            <span class="duration"><i class="fas fa-clock"></i> 15 min</span>
                            <span class="category architecture">Architecture</span>
                        </div>
                        <button class="btn btn-primary presentation-btn" onclick="openPresentation('cloud-architecture')">
                            <i class="fas fa-play"></i> View Presentation
                        </button>
                    </div>
                </div>

                <div class="presentation-card" data-type="video">
                    <div class="presentation-thumbnail">
                        <i class="fas fa-music"></i>
                        <div class="video-badge">
                            <i class="fas fa-video"></i> Video
                        </div>
                    </div>
                    <div class="presentation-content">
                        <h3>Audio Processing Pipeline</h3>
                        <p>Deep dive into GT Cloud's real-time audio processing and Dolby Atmos integration.</p>
                        <div class="presentation-meta">
                            <span class="duration"><i class="fas fa-clock"></i> 20 min</span>
                            <span class="category technical">Technical</span>
                        </div>
                        <button class="btn btn-primary presentation-btn" onclick="openPresentation('audio-pipeline')">
                            <i class="fas fa-play"></i> View Presentation
                        </button>
                    </div>
                </div>

                <div class="presentation-card" data-type="interactive">
                    <div class="presentation-thumbnail">
                        <i class="fas fa-users"></i>
                        <div class="video-badge">
                            <i class="fas fa-mouse-pointer"></i> Interactive
                        </div>
                    </div>
                    <div class="presentation-content">
                        <h3>Collaboration Features</h3>
                        <p>How GT Cloud enables seamless collaboration between artists, producers, and engineers.</p>
                        <div class="presentation-meta">
                            <span class="duration"><i class="fas fa-clock"></i> 12 min</span>
                            <span class="category features">Features</span>
                        </div>
                        <button class="btn btn-primary presentation-btn" onclick="openPresentation('collaboration')">
                            <i class="fas fa-play"></i> View Presentation
                        </button>
                    </div>
                </div>

                <div class="presentation-card" data-type="video">
                    <div class="presentation-thumbnail">
                        <i class="fas fa-shield-alt"></i>
                        <div class="video-badge">
                            <i class="fas fa-video"></i> Video
                        </div>
                    </div>
                    <div class="presentation-content">
                        <h3>Security & Privacy</h3>
                        <p>Enterprise-grade security features and privacy controls for your audio content.</p>
                        <div class="presentation-meta">
                            <span class="duration"><i class="fas fa-clock"></i> 18 min</span>
                            <span class="category security">Security</span>
                        </div>
                        <button class="btn btn-primary presentation-btn" onclick="openPresentation('security')">
                            <i class="fas fa-play"></i> View Presentation
                        </button>
                    </div>
                </div>

                <div class="presentation-card" data-type="video">
                    <div class="presentation-thumbnail">
                        <i class="fas fa-brain"></i>
                        <div class="video-badge">
                            <i class="fas fa-video"></i> Video
                        </div>
                    </div>
                    <div class="presentation-content">
                        <h3>AI-Powered Mastering</h3>
                        <p>Revolutionary AI mastering technology that adapts to your creative vision.</p>
                        <div class="presentation-meta">
                            <span class="duration"><i class="fas fa-clock"></i> 25 min</span>
                            <span class="category ai-technology">AI Technology</span>
                        </div>
                        <button class="btn btn-primary presentation-btn" onclick="openPresentation('ai-mastering')">
                            <i class="fas fa-play"></i> View Presentation
                        </button>
                    </div>
                </div>

                <div class="presentation-card" data-type="slide">
                    <div class="presentation-thumbnail">
                        <i class="fas fa-chart-line"></i>
                        <div class="video-badge">
                            <i class="fas fa-presentation"></i> Slides
                        </div>
                    </div>
                    <div class="presentation-content">
                        <h3>Analytics & Insights</h3>
                        <p>Comprehensive analytics dashboard for tracking performance and engagement.</p>
                        <div class="presentation-meta">
                            <span class="duration"><i class="fas fa-clock"></i> 14 min</span>
                            <span class="category analytics">Analytics</span>
                        </div>
                        <button class="btn btn-primary presentation-btn" onclick="openPresentation('analytics')">
                            <i class="fas fa-play"></i> View Presentation
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- GT Cloud Deep Dive Section -->
    <section class="gt-cloud-detailed-section">
        <div class="container">
            <div class="gt-cloud-detailed-header">
                <h2><i class="fas fa-headphones"></i> What is GT Cloud?</h2>
                <p class="gt-cloud-detailed-intro">GT Cloud is a next-generation audio technology platform built to power the future of sound creation, storage, and collaboration. It's a secure and scalable cloud infrastructure designed specifically for the music, audio production, and creative industries.</p>
            </div>

            <div class="gt-cloud-detailed-purpose">
                <div class="detailed-purpose-card">
                    <h3><i class="fas fa-cloud"></i> Core Purpose</h3>
                    <blockquote>"To give every creator the power of a world-class studio, accessible from anywhere."</blockquote>
                    <p>It eliminates the limitations of hardware, distance, and data storage ‚Äî enabling real-time, lossless, and collaborative workflows through the cloud.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="cloud-features-section">
        <div class="container">
            <h2><i class="fas fa-cogs"></i> Key Capabilities</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <h3>Cloud-Based Audio Storage</h3>
                    <p>Upload and store uncompressed audio formats like WAV, AIFF, FLAC, or even Dolby Atmos masters without losing fidelity.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-sliders-h"></i>
                    </div>
                    <h3>Cloud Mixing & Mastering</h3>
                    <p>Mix, master, and balance tracks directly in the cloud using advanced tools or integrated DAW plugins.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>Real-Time Collaboration</h3>
                    <p>Invite multiple collaborators to edit or review sessions simultaneously, with version tracking and audio preview.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h3>AI-Assisted Tools</h3>
                    <p>Intelligent mixing suggestions, loudness balancing, and metadata tagging powered by GT's AI systems.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cube"></i>
                    </div>
                    <h3>Dolby Atmos & Multi-Channel Support</h3>
                    <p>Handle immersive formats (up to 7.2.4 channels) for spatial and cinematic sound experiences.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Secure Infrastructure</h3>
                    <p>Protected by multi-layer encryption, with full GDPR and copyright compliance.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Presentation Modal -->
    <div id="presentationModal" class="presentation-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Presentation Title</h3>
                <button class="close-btn" onclick="closePresentation()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div id="presentationContent" class="presentation-viewer">
                    <!-- Presentation content will be loaded here -->
                </div>
            </div>
        </div>
